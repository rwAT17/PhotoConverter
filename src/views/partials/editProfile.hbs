<div class='wrapper'>



	<div class="add-profile">
		<h1>Edit profile</h1>
		<form class="add-profile__form" method="POST" action="/addProfile">
			<div class="add-profile__container">
				<div class="add-profile__input">

					<label class="add-profile" for="">Name</label>
					<input class="" type="text" name="newName" value="{{oldParameters.name}}">
				</div>
				<div class="add-profile__input">
					<label for="">Size</label>
					<input class="" type="text" name="newSize" value="{{oldParameters.parameters.size}}">
				</div>
				<div class="add-profile__input">
					<label for="">Quality</label>
					<input class="" type="text" name="newQuality" value="{{oldParameters.parameters.quality}}">
				</div>
				<div class="add-profile__check">
					<input class="" type="hidden" name="newWaterMark" value="0"><input type="checkbox"
						onclick="this.previousSibling.value=1-this.previousSibling.value">
					<label for="">WaterMark</label>
				</div>
				<div class="add-profile__check">
					<input class="" type="hidden" name="newLogo" value="0"><input type="checkbox"
						onclick="this.previousSibling.value=1-this.previousSibling.value">
					<label for="">Logo</label>
				</div>

			</div>
			<input type="hidden" name="profileId" value="{{oldParameters.profileId}}">
			<button name='save' formaction='/editHandler' type='submit' value='{{this.name}}'>save</button>
		</form>
	</div>