<div class="wrapper">
	<div class="current-location">
	 <p> You are now in</p>
	 <div class="current-location__path"> {{#each location}}
	<a class="current-location__link" href="http://localhost:3000/reader?page={{this.url}}">{{this.name}}</a>
	<p>/</p>
	 {{/each}}</div>
	
</div>

<div class='files-box'>
	<div class='columns-names'>
		<div class='columns-names'><p>Name:</p></div>
		<div class='columns-names'><p>Last edited on:</p></div>
		<div class='columns-names'><p>Size:</p></div>
	</div>


	<div class="columns-data">
<form method='POST' action="/reader">
        <div class="file-row">
                 {{#each fileList}} 
					 {{#if isDirectory}}
                    <div class="columns-data__name">    
                      <img id="imgMini" class="column-img"  src="/icons/16673999841535958152.svg" alt="">
                     <a class="columns-data__link" href='{{../url}}/{{this.name}}'> <div>{{this.name}}</div></a>
					</div>
                     <div class="columns-data__edit">{{this.time}}</div>
			         <div class="columns-data__size">{{this.size}}</div>
					{{/if}}
			      {{/each}} 


				 {{#each fileList}} 
					 {{#if isFile}}
                                   
					<div class="columns-data__name">    
					      <input type='checkbox' id='dupa' name='{{this.name}}' value='{{../dirName}}/'/>
                      <img id="imgMini" class="column-img"  src="/icons/5752709981538117042.svg" alt="">
                     <a class="columns-data__link" href='{{../url}}/{{this.name}}'> <div>{{this.name}}</div></a>
					</div>
                     <div class="columns-data__edit">{{this.time}}</div>
			         <div class="columns-data__size">{{this.size}}</div>
					{{/if}}
			    {{/each}} 
        </div>
</div>
</div>
				<input class="submitReader" type='submit' value='Convert' />
              </form>
</div>



